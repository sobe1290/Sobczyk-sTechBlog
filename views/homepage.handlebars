<div class="container pt-3">
    <div class="jumbotron rounded bg-dark text-light text-center">
      <h1>Sobczyk's Tech Blog</h1>
      <p>Drop a comment on something tech related.</p>
    </div>

{{#each posts as |post|}}
<div class="container rounded  p-5 my-5 bg-dark text-white">
    <h1>{{post.postTitle}}</h1>
    <h2>{{post.postBody}}</h2>    
    <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
</div>

  </div>
{{/each}}

